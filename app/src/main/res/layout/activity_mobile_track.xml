<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.dastudio.mobilesafe.activity.mobileTrackActivity">

    <EditText
        android:id="@+id/track_et_input"
        android:padding="10dp"
        android:hint="@string/input_name"
        android:singleLine="true"
        android:background="@drawable/track_rt_input"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/track_tv_province"
        android:layout_marginTop="10dp"
        android:text="@string/track_tv_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="find"
        android:layout_marginTop="10dp"
        android:text="@string/find_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>



</LinearLayout>
