<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreen" parent="AppThemeNoBar">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimaryDark">@color/colorWhite</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RateDialogStyle" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="android:windowAnimationStyle">@style/customerAnimation</item>-->
    </style>

    <style name="customerAnimation">
